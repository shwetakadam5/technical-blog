
<form class="form blog-updateform login-container">
    <div class="form-group row mb-3"><h2 id="form-title">Edit Post</h2></div>
  <div class="form-group row mb-3">
    <label for="title" class="form-label">Title</label>
    <input class="form-input" type="text" id="title" value="{{blogDetails.blog_title}}"/>    
    <input type="hidden" value="{{blogDetails.id}}" id="blog_id" />
  </div> 
  <div class="form-group row mb-3">
    <label for="content" class="form-label">Content</label>
    <input class="form-input" type="text" id="content" value="{{blogDetails.blog_content}}"/>
   
  </div> 
 <div class="form-group row mb-3">
    <button id="updateBlog" class="btn btn-primary" type="submit">Update Post</button>
      
  </div>
  <div class="form-group row mb-3">
    <button id="deleteBlog" class="btn btn-primary" type="submit">Delete</button>
  </div>
</form>

<script src="/js/updateblog.js"></script>